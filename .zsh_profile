addToPathFront() {
    if [[ "$PATH" != *"$1"* ]]; then
        export PATH=$1:$PATH
    fi
}

export EDITOR='nvim'
export HUSKY=0
export GH_DASH_CONFIG="$HOME/.gh-dash.yml"

VIM='nvim'
VIEW='nvim -R'

alias reload='source ~/.zshrc && source ~/.zsh_profile'
alias edit='vim'
alias gs='git status'
alias t='tmux'
alias rr='gh pr view --web'
alias lg='lazygit'
alias uncommit='git reset HEAD~1'
alias unwip='git log -n 1 | grep -q -c wip && git reset HEAD~1'
alias wip='git add . && git commit -m wip'
alias pr='gh dash'
alias r='mise run'

addToPathFront $HOME/.local/scripts
addToPathFront $HOME/.docker/bin
addToPathFront $HOME/go/bin

bindkey -s ^f "tmux-sessionizer\n"
bindkey -s ^g "tmux-gh-dash\n"

DOTFILES=$HOME/.dotfiles


cheat() {
    curl https://cheat.sh/$1
}

ubuntu() {
    docker run --rm -it ubuntu:22.04 /bin/bash
}

source ~/.local/scripts/tmux-fns